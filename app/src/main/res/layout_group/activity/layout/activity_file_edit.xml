<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.FileEditActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorPrimaryDark">
        <ImageView
            android:id="@+id/iv_edit_back"
            android:layout_width="48dp"
            android:layout_height="26dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="7dp"
            app:srcCompat="@mipmap/ic_arrow_back"/>
        <TextView
            android:id="@+id/tv_filename"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_edit_back"
            android:layout_toStartOf="@+id/iv_edit_save"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="9dp"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>
        <ImageView
            android:id="@+id/iv_edit_save"
            android:layout_width="48dp"
            android:layout_height="26dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="7dp"
            app:srcCompat="@mipmap/ic_save"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_tools_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:scrollbars="none">
    </android.support.v7.widget.RecyclerView>

    <EditText
        android:id="@+id/ed_file_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="textMultiLine"
        android:lineSpacingMultiplier="1.2"
        android:scrollbars="vertical"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="5dp"
        android:background="@null"
        android:gravity="start"/>

</LinearLayout>